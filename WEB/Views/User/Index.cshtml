@model IEnumerable<ApplicationUser>

@{
    Layout = "_Layout";
}

<br/>

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">User List</h2>
    </div>
</div>

<div class="p-4 border rounded">
    
    @if (Model.Any())
    {
        <table class="table table-striped border">
            <tr class="text-secondary">
                <th>Email</th>
                <th>Name</th>
                <th>Roles</th>
                <th>Action</th>
            </tr>
            
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.Name</td>
                    <td>@item.Role</td>
                    <td></td>
                </tr>
            }

        </table>
    }

</div>